@model ItemUpdateVM
<form style="width: 26rem;" method="post" enctype="multipart/form-data">
    <!-- Name input -->
    <div data-mdb-input-init asp-class="form-outline mb-4">
        <input type="text" asp-for="Title" id="form4Example1" class="form-control" />
        <label class="form-label">Title</label>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div data-mdb-input-init asp-class="form-outline mb-4">
        <input type="text" asp-for="Description" id="form4Example1" class="form-control" />
        <label class="form-label">Description</label>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div data-mdb-input-init asp-class="form-outline mb-4">
        <input type="file" accept="image/*" asp-for="ImagePath" id="form4Example1" class="form-control" />
        <label class="form-label">ImagePath</label>
        <span asp-validation-for="ImagePath" class="text-danger"></span>
    </div>
    <div data-mdb-input-init asp-class="form-outline mb-4">
        <select asp-for="Category" asp-items='@new SelectList(ViewBag.Category,"Id","Name")'>Category</select>

        <label class="form-label">Category</label>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <!-- Submit button -->
    <button data-mdb-ripple-init type="submit" class="btn btn-primary btn-block mb-4">Submit</button>
</form>